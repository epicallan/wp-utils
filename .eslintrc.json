{
    "extends": "airbnb",
    "installedESLint": true,
    "env": {
      "node": true,
      "mocha": true,
      "browser": false
    },
    "globals": {
      "describe": true,
      "it": true,
      "sinon": true
    },
    "rules": {
      "import/default": 0,
      "import/no-duplicates": 0,
      "import/named": 0,
      "import/namespace": 0,
      "import/no-unresolved": 0,
      "import/no-named-as-default": 2,
      "comma-dangle": 0,
      "indent": [2, 2, {"SwitchCase": 1}],
      "no-console": 0,
      "no-alert": 0,
      "no-confusing-arrow": 0
    },
    "settings": {
      "import/resolve": {
        "moduleDirectory": ["node_modules", "src"]
      }
    }
}
